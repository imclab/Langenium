!!!5
html
	head
		include header
	body
		.container
			#top_nav.span-22.last
				ul
					li
						a(href='#contact') Contact us
					li.user
						if (logged_id == true)
							img(src=user.profile_img)
							a(href='#profile')= user.username
							a(href='/logout') Logout
						else
							a(href='/auth/facebook') Login with Facebook
			.round-box
				#header.span-22.last
					h1.span-7
						a(href='/') 
							span.hidden Langenium
					include menu
			case page
				when 'pages/home'
					include pages/home				
				when 'pages/about'
					include pages/about
				when 'pages/gallery_list'
					include pages/gallery_list
				when 'pages/gallery_view'
					include pages/gallery_view
				when 'pages/guide'
					include pages/guide
				when 'pages/guide_edit'
					include pages/guide_edit
				when 'pages/community'
					include pages/community
	script
